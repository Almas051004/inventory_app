                <!-- Вкладка Настройки доступа -->
                <div class="tab-pane fade" id="access-settings" role="tabpanel" aria-labelledby="access-settings-tab">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">{{ 'access.title'|trans }}</h5>
                                </div>
                                <div class="card-body">
                                    <!-- Добавление нового пользователя -->
                                    <div class="mb-4">
                                        <h6>{{ 'access.add_user'|trans }}</h6>
                                        <div class="input-group">
                                            <input type="text"
                                                   class="form-control"
                                                   id="userSearch"
                                                   placeholder="{{ 'access.user_placeholder'|trans }}">
                                            <button class="btn btn-outline-primary" type="button" id="searchUsersBtn">
                                                <i class="bi bi-search"></i>
                                            </button>
                                        </div>
                                        <div id="userSuggestions" class="mt-2 d-none">
                                            <div class="list-group" id="userSuggestionsList"></div>
                                        </div>
                                    </div>

                                    <!-- Список пользователей с доступом -->
                                    <div class="mb-4">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h6 class="mb-0">{{ 'access.users_with_write_access'|trans }}</h6>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button type="button" class="btn btn-outline-secondary active" id="sortByName">
                                                    {{ 'access.sort_by_name'|trans }}
                                                </button>
                                                <button type="button" class="btn btn-outline-secondary" id="sortByEmail">
                                                    {{ 'access.sort_by_email'|trans }}
                                                </button>
                                            </div>
                                        </div>

                                        <div id="accessList" class="list-group">
                                            <!-- Список пользователей будет загружен через JavaScript -->
                                        </div>

                                        <div id="noAccessUsers" class="text-muted text-center py-4 d-none">
                                            <i class="fa fa-users fa-2x mb-3"></i>
                                            <p>{{'access.no_users'|trans}}</p>
                                        </div>
                                    </div>

                                    <!-- Публичный доступ -->
                                    <div class="alert alert-warning">
                                        <div class="form-check">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   id="isPublic"
                                                   {{ inventory.isPublic ? 'checked' : '' }}>
                                            <label class="form-check-label" for="isPublic">
                                                <strong>{{'access.public_access'|trans}}</strong>
                                            </label>
                                        </div>
                                        <small class="form-text text-muted">
                                            {{ 'inventory.public_access_description'|trans }}
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
