                <!-- Вкладка Статистика -->
                <div class="tab-pane fade" id="statistics" role="tabpanel" aria-labelledby="statistics-tab">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">{{ 'statistics.title'|trans }}</h5>
                                </div>
                                <div class="card-body">
                                    <!-- Основная статистика -->
                                    <div class="row mb-4">
                                        <div class="col-md-3">
                                            <div class="card bg-primary text-white">
                                                <div class="card-body text-center">
                                                    <h3 id="total-items-count">-</h3>
                                                    <p class="mb-0">{{'statistics.total_items'|trans}}</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="card bg-success text-white">
                                                <div class="card-body text-center">
                                                    <h3 id="active-fields-count">-</h3>
                                                    <p class="mb-0">{{'statistics.active_fields'|trans}}</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="card bg-warning text-white">
                                                <div class="card-body text-center">
                                                    <h3 id="numeric-fields-count">-</h3>
                                                    <p class="mb-0">{{'statistics.numeric_fields'|trans}}</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="card bg-info text-white">
                                                <div class="card-body text-center">
                                                    <h3 id="text-fields-count">-</h3>
                                                    <p class="mb-0">{{'statistics.text_fields'|trans}}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Диапазоны дат -->
                                    <div class="row mb-4">
                                        <div class="col-md-6">
                                            <h6>{{'statistics.created_date_range'|trans}}</h6>
                                            <div id="created-date-range" class="text-muted">
                                                {{'statistics.loading'|trans}}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>{{'statistics.updated_date_range'|trans}}</h6>
                                            <div id="updated-date-range" class="text-muted">
                                                {{'statistics.loading'|trans}}
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Статистика числовых полей -->
                                    <div id="numeric-fields-stats" class="mb-4">
                                        <h6>{{ 'statistics.numeric_fields_stats'|trans }}</h6>
                                        <div id="numeric-fields-content">
                                            {{ 'statistics.loading'|trans }}
                                        </div>
                                    </div>

                                    <!-- Статистика текстовых полей -->
                                    <div id="text-fields-stats">
                                        <h6>{{ 'statistics.text_fields_stats'|trans }}</h6>
                                        <div id="text-fields-content">
                                            {{ 'statistics.loading'|trans }}
                                        </div>
                                    </div>

                                    <!-- Кнопка обновления -->
                                    <div class="mt-4 text-center">
                                        <button type="button" class="btn btn-outline-primary" id="refresh-statistics">
                                            <i class="fa fa-sync-alt"></i> {{ 'statistics.refresh'|trans }}
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
