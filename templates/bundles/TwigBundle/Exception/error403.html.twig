{% extends 'base.html.twig' %}

{% block title %}{{ 'error.403.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <!-- Иконка запрета -->
                    <div class="mb-4">
                        <i class="bi bi-shield-x display-1 text-danger"></i>
                    </div>

                    <!-- Заголовок -->
                    <h1 class="h3 mb-3">{{ 'error.403.title'|trans }}</h1>

                    <!-- Описание -->
                    <p class="text-muted mb-4">
                        {{ 'error.403.description'|trans }}
                    </p>

                    <!-- Действия -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                            <i class="bi bi-house me-2"></i>
                            {{ 'error.403.home'|trans }}
                        </a>
                        <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-person me-2"></i>
                            {{ 'error.403.profile'|trans }}
                        </a>
                    </div>

                    <!-- Дополнительная информация -->
                    <div class="mt-4 pt-4 border-top">
                        <small class="text-muted">
                            {{ 'error.403.help'|trans }}
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
