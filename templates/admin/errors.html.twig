{% extends 'admin/dashboard.html.twig' %}

{% block title %}{{ 'admin.errors.title'|trans }} - {{ parent() }}{% endblock %}

{% block admin_content %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">{{ 'admin.errors.title'|trans }}</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>{{ 'admin.errors.error_id'|trans }}</th>
                                <th>{{ 'admin.errors.message'|trans }}</th>
                                <th>{{ 'admin.errors.user'|trans }}</th>
                                <th>{{ 'admin.errors.created_at'|trans }}</th>
                                <th>{{ 'admin.errors.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for error in errors %}
                                <tr>
                                    <td>
                                        <code>{{ error.errorId }}</code>
                                    </td>
                                    <td>
                                        <div style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;" title="{{ error.message }}">
                                            {{ error.message }}
                                        </div>
                                    </td>
                                    <td>
                                        {% if error.user %}
                                            {{ error.user.username ?: error.user.email }}
                                        {% else %}
                                            <span class="text-muted">{{ 'admin.errors.anonymous'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ error.createdAt|date('d.m.Y H:i:s') }}</td>
                                    <td>
                                        <a href="{{ path('admin_error_details', {'errorId': error.errorId}) }}"
                                           class="btn btn-sm btn-primary">
                                            {{ 'admin.errors.view_details'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        {{ 'admin.errors.no_errors'|trans }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
